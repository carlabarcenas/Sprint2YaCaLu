<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rt"
    tools:context=".Lantern">

    <Button
        android:background="@android:color/transparent"
        android:text="LANTERN"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/iv_lint"
        style="@style/tx_lint"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/linterna"
        android:layout_width="250dp"
        android:layout_height="300dp"

        />

    <Button

        style="@style/tx_lint0"
        android:id="@+id/bt_lint0"
        android:text="@string/next"
        android:background="@drawable/shape_green"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        />



    <Button
        android:id="@+id/bt_lint1"
        style="@style/tx_lint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_green"
        android:text="return"
        android:layout_marginTop="9dp"
        />


</LinearLayout>