<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/rt"
android:orientation="vertical"
tools:context="com.example.yanet.recyclerview2.MenuActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/wr"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:background="@drawable/writing" />


            <ImageButton
                android:id="@+id/lvEnglish"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="0"
                android:background="@drawable/tiempos" />



            <ImageButton
                android:id="@+id/gra"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@drawable/gramar" />


            <ImageButton

                android:id="@+id/ta"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="1"
                android:background="@drawable/adj"
                android:textAlignment="center" />


            <ImageButton

                android:id="@+id/voc"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@drawable/vocab" />

            <ImageButton
                android:id="@+id/or"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="2"
                android:background="@drawable/ora"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/ad"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="3"
                android:background="@drawable/tar" />

            <ImageButton
                android:id="@+id/ob"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@drawable/obj"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/con"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="4"
                android:background="@drawable/conect" />

            <ImageButton
                android:id="@+id/fra"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="4"
                android:background="@drawable/frases"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/pres"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="5"
                android:background="@drawable/condiciones" />

            <ImageButton

                android:id="@+id/cond"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="5"
                android:background="@drawable/presentaciones"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/exp"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="0"
                android:layout_row="6"
                android:background="@drawable/expr" />

            <ImageButton
                android:id="@+id/ur"
                android:layout_width="186dp"
                android:layout_height="117dp"
                android:layout_column="2"
                android:layout_row="6"
                android:background="@drawable/url"
                android:textAlignment="center" />
            <TextView
                android:layout_column="2"
                android:layout_row="7"/>
            <TextView
                android:layout_column="0"
                android:layout_row="7"/>

            <Button
                android:id="@+id/btnFb"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_column="2"
                android:layout_row="8"
                android:background="@drawable/face"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnyoutube"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_below="@+id/btnFb"
                android:layout_column="0"
                android:layout_row="8"
                android:background="@drawable/you"
                tools:ignore="MissingConstraints" />

        </GridLayout>
    </ScrollView>

</RelativeLayout>